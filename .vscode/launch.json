    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nodemon Launch Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "restart": true,
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            //"cwd": "${workspaceFolder}",
            //"program": "${workspaceFolder}/bin/www",
        }
    ]
}